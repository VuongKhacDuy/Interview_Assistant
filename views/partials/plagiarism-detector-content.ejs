<div class="tab-pane fade" id="plagiarism-content">
    <ul class="nav nav-tabs mb-3" id="plagiarismTabs">
        <li class="nav-item">
            <a class="nav-link active" id="plagiarism-text-tab" data-bs-toggle="tab" href="#plagiarism-text-content">Văn bản</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="plagiarism-file-tab" data-bs-toggle="tab" href="#plagiarism-file-content">Tập tin</a>
        </li>
    </ul>
    
    <div class="tab-content">
        <!-- Tab Văn bản đạo văn -->
        <div class="tab-pane fade show active" id="plagiarism-text-content">
            <div class="mb-3">
                <textarea class="form-control" id="plagiarismSourceText" rows="8" 
                    placeholder="Nhập văn bản cần kiểm tra đạo văn..."></textarea>
            </div>
            <button type="button" class="btn btn-primary" id="detectPlagiarismText">
                <i class="bi bi-search"></i> Kiểm tra
            </button>
        </div>
        
        <!-- Tab Tập tin đạo văn -->
        <div class="tab-pane fade" id="plagiarism-file-content">
            <div class="file-upload-area p-4 text-center mb-3">
                <i class="bi bi-cloud-upload fs-2 mb-2"></i>
                <h5>Kéo thả hoặc chọn tập tin</h5>
                <p class="text-muted">Hỗ trợ PDF, DOCX, TXT</p>
                <input type="file" class="form-control" id="plagiarismFileInput" 
                    accept=".pdf,.docx,.txt">
            </div>
            <button type="button" class="btn btn-primary" id="detectPlagiarismFile" disabled>
                <i class="bi bi-search"></i> Kiểm tra
            </button>
        </div>
    </div>
</div>