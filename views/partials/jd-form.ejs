<div class="container mt-4">
    <input type="hidden" id="hiddenJDText" name="hiddenJDText">
    <h2 class="mb-4">Enter JD or Upload PDF File</h2>
    <form id="jdForm" method="post" enctype="multipart/form-data" action="/jd/generate-question">
        <div class="mb-3">
            <textarea name="jdText" id="jdText" class="form-control" placeholder="Enter JD here..." rows="10"></textarea>
        </div>
        <div class="mb-3">
            <label for="pdfFile" class="form-label">Upload File PDF</label>
            <input type="file" name="pdfFile" id="pdfFile" accept="application/pdf" class="form-control">
            <button type="button" id="removePdf" class="btn btn-danger btn-sm mt-2" style="display: none;">Delete file PDF</button>
        </div>

        <!-- Translation Section -->
        <div class="mb-3">
            <div class="d-flex align-items-center gap-2">
                <select id="translateLanguage" name="translateLanguage" class="form-select" style="width: auto;">
                    <option value="vi" selected>Tiếng Việt</option>
                    <option value="en">English</option>
                    <option value="zh">中文</option>
                </select>
                <button type="button" id="translateJD" class="btn btn-outline-primary">
                    <i class="bi bi-translate"></i> JD Translation
                </button>
                <span id="translateSpinner" class="spinner-border spinner-border-sm" style="display: none;" role="status"></span>
            </div>
        </div>

        <!-- Translated Content Section -->
        <div id="translatedSection" class="mb-3" style="display: none;">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Translation</h5>
                    <button type="button" class="btn btn-outline-secondary btn-sm" id="copyTranslation">
                        <i class="bi bi-clipboard"></i> Copy
                    </button>
                </div>
                <div class="card-body">
                    <textarea id="translatedJD" class="form-control" rows="10" readonly></textarea>
                </div>
            </div>
        </div>

        <!-- Interview Language Section -->
        <div class="mb-3">
            <label for="interviewLanguage" class="form-label">Select interview language:</label>
            <select id="interviewLanguage" name="interviewLanguage" class="form-select">
                <option value="vi" selected>Tiếng Việt</option>
                <option value="en">English</option>
                <option value="zh">中文</option>
            </select>
        </div>
        <div class="mb-3">
            <button type="submit" id="submitJD" class="btn btn-primary">
                <span class="button-text">Cho tôi câu hỏi</span>
                <span id="jdSpinner" class="spinner-border spinner-border-sm ms-2" style="display: none;" role="status">
                    <span class="visually-hidden">Đang xử lý...</span>
                </span>
            </button>
        </div>

        <!-- Thêm div để hiển thị thông báo lỗi -->
        <div class="invalid-feedback" id="formError"></div>
    </form>
</div>