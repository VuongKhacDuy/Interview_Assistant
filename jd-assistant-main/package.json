{
  "name": "jd-assistant",
  "version": "1.0.0",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "pm2": "pm2 start server.js --name jdassistant --env production",
    "stoppm2": "pm2 stop server.js",
    "build": "pkg . --targets node18-win-x64 --output dist/jd-assistant.exe"
  },
  "pkg": {
    "assets": [
      "views/**/*",
      ".env",
      "node_modules/ejs/**/*"
    ],
    "scripts": [
      "server.js",
      "controllers/**/*.js",
      "routes/**/*.js"
    ],
    "options": [
      "experimental-modules"
    ]
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "marked": "^15.0.7",
    "multer": "^1.4.5-lts.2",
    "nodemon": "^3.1.9",
    "pdf-parse": "^1.1.1"
  }
}
